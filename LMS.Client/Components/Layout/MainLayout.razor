@inherits LayoutComponentBase


<header class="fixed-top">
    <div class="px-3 py-2 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between">
                <a href="/" class="my-2 my-lg-0 text-white text-decoration-none">
                    LMS
                </a>
                <div class="my-2 my-lg-0 text-white text-decoration-none">[Användarnamn]</div>
                <button type="button" class="btn btn-primary my-2 my-lg-0">Logout</button>
            </div>
        </div>
    </div>
    <div class="px-3 py-2 border-bottom mb-3 bg-light">
        <div class="container d-flex flex-wrap justify-content-center">
            <NavMenu />
        </div>
    </div>
</header>

<div class="container container-xl">
    <main class="row mt-4">
        <div class="col-12">
            @Body
        </div>
    </main>

    <div class="row">
        <div class="col-12">
            <div id="blazor-error-ui">
                An unhandled error has occurred.
                <a href="" class="reload">Reload</a>
                <a class="dismiss">🗙</a>
            </div>
        </div>
    </div>
</div>

<div class="footer container-fluid fixed-bottom bg-dark text-white">
    <footer class="container-xl">
        <div class="col-12 py-2">
            ©2024 Silver Astrounauts
        </div>
    </footer>
</div>