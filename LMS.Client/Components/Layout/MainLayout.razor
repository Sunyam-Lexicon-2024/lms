@inherits LayoutComponentBase


<header class="fixed-top">
    <AppMenu />
    <NavMenu />
</header>

<div class="container container-xl">
    <main class="row mt-4">
        <div class="col-12">
            @Body
        </div>
    </main>

    <div class="row">
        <div class="col-12">
            <div id="blazor-error-ui">
                An unhandled error has occurred.
                <a href="" class="reload">Reload</a>
                <a class="dismiss">🗙</a>
            </div>
        </div>
    </div>
</div>

<div class="footer container-fluid fixed-bottom bg-dark text-white">
    <footer class="container-xl">
        <div class="col-12 py-2">
            ©2024 Silver Astrounauts
        </div>
    </footer>
</div>

<Toasts class="p-3" AutoHide="true" Delay="4000" Placement="ToastsPlacement.BottomLeft" />